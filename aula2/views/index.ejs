<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>
	<body>
		<h1><%= title %></h1>
		<p>Welcome to <%= title %></p>
		<p><%= customers.length %> registered customers!</p>
		<table>
			<thead>
				<tr>
					<td>Name</td>
					<td>Age</td>
					<td>Region</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				<% customers.forEach(item=>{ %>
				<tr>
					<td>
						<a href="/edit/<%= item._id %>" title="Edit"><%= item.name %></a>
					</td>
					<td><%= item.age %></td>
					<td><%= item.city %> <%= item.state %></td>
					<td>
						<a href="/edit/<%= item._id %>" title="Edit">
							<img src="/images/edit.png" />
						</a>
						<a
							href="/delete/<%= item._id %>"
							title="Delete"
							onclick="return confirm('Are you sure you want to delete this client?');"
						>
							<img src="/images/delete.png" />
						</a>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
		<hr />
		<a href="/new">Register New</a>
	</body>
</html>
